<Window x:Name="WPF" x:Class="WpfTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTest"
        mc:Ignorable="d"
        Title="WPF test" Height="450" Width="620">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Background="Gray">
            <TextBlock Text="Меню" TextAlignment="Center"/>
            <Button Content="Вход" Margin="3" />
            <Button Content="Авторизация" Margin="3" />
            <Button Content="Выход" Margin="3" Click="Button_Click" />
        </StackPanel>
        <Grid Grid.Column="1">
            <TextBlock Text=" КОНТЕНТ БУДЕТ ТУТ"
                       
                       FontSize="30"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       />
        </Grid>
    </Grid>
</Window>
